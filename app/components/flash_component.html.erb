<div data-controller="flash" class="flex w-96 shadow-lg rounded-lg">
  <div class="<%= @classes %> py-4 px-6 rounded-l-lg flex items-center">
    <%= render @icon, class_names: "w-5 h-5 text-white dark:text-gray-400" %>
  </div>
  <div class="px-4 py-6 bg-white dark:bg-gray-800 dark:text-gray-200 rounded-r-lg flex justify-between items-center w-full">
    <div><%= @data %></div>
    <button data-action="flash#dismiss">
      <%= render "icons/x_mark", class_names: "w-5 h-5" %>
      <span class="sr-only"><%= t(:'general.screen_reader.close') %></span>
    </button>
  </div>
</div>