<div>
  <% flash.each do |type, msg| %>
    <%= render partial: "shared/alerts/success", locals: {title: "Sucess", message: msg} %>
  <% end %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with( model: user, url: profile_password_path, method: :patch) do |f| %>
    <div class="form-field">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password" %>
      <p class="field-hint">You must provide your current password in order to change it.</p>
    </div>
    <div class="form-field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class="form-field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="my-2 flex items-center justify-between">
      <%= f.submit "Save password", class: "btn-primary" %>
      <p class="field-hint"><%= link_to "Forgot your password?", new_password_path(@user) %></p>
    </div>
    Â  <% end %>
</div>
