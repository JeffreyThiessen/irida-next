<!DOCTYPE html>
<html class="light" lang="<%= locale %>">
  <head>
    <title><%= t(:"layouts.application.site_title") %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= render "shared/dark_mode_check" %>
  </head>
  <body class="bg-white dark:bg-gray-900" data-controller="dark-mode">
    <div class="body-wrapper">
      <%= render "shared/navbar" %>
      <div data-controller="layout" data-layout-target="layoutContainer" class="body">
        <%= render Navigation::NavigationComponent.new do |navigation| %>
          <% navigation.with_header(
            label: t(:"profiles.sidebar.header"),
            url: profile_path,
            icon: "user_circle"
          ) %>
          <%= navigation.with_section do |section| %>
            <%= render section.with_item(
              url: profile_path,
              icon: "user",
              label: t(:"profiles.sidebar.profile")
            ) %>
            <%= render section.with_item(
              url: edit_profile_password_path,
              icon: "lock_closed",
              label: t(:"profiles.sidebar.password")
            ) %>
            <%= render section.with_item(
              url: profile_account_path,
              icon: "building_library",
              label: t(:"profiles.sidebar.account")
            ) %>
          <% end %>
        <% end %>
        <div class="content">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render "shared/flash" %>
  </body>
</html>
