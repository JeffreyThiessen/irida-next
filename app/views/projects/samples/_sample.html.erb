<div id="<%= dom_id sample %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= sample.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= sample.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Project:</strong>
    <%= sample.project_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this sample", sample, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this sample', edit_sample_path(sample), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
