<div class="bg-white block sm:flex items-center justify-between dark:bg-gray-800 dark:border-gray-700">
  <div class="w-full mb-1">
    <div class="flex flex-row items-center">
      <%= render 'icons/squares_plus', class_names: "h-14 w-14 text-green-500" %>
      <div class="flex-1 pl-2">
        <h2 class="text-xl font-semibold leading-tight text-gray-900 dark:text-white"><%= title %></h2>
        <% if defined?(subtitle) %>
          <p class="text-sm text-gray-500 dark:text-gray-400"><%= subtitle %></p>
        <% end %>
      </div>
    </div>
    <hr class="h-px my-2 bg-gray-200 border-0 dark:bg-gray-700">
  </div>
</div>