<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 md:space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="form-field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <p class="field-hint"><%= @minimum_password_length %> characters minimum</p>
    <% end %>
  </div>
  <div class="form-field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions">
    <%= f.submit "Register", class: "btn btn-primary" %>
  </div>
<% end %>
<p class="field-hint text-center">Already have login and
  password? <%= link_to "Sign in", new_session_path(resource_name), class: "link" %></p>
