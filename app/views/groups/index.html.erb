<div class="p-4 bg-white block sm:flex items-center justify-between lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700">
  <div class="w-full">
    <div class="flex justify-between items-center">
      <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">Your groups</h1>

      <a class="inline-flex items-center justify-center btn btn-primary" href="<%= new_group_path %>">
        <%= render 'icons/plus', class_names: "w-5 h-5 mr-2 -ml-1" %>
        New Group
      </a>
    </div>
  </div>
</div>
<div class="flex flex-col">
  <div class="overflow-x-auto">
    <div class="inline-block min-w-full">
      <div class="overflow-hidden shadow">
        <table class="min-w-full table-fixed dark:divide-gray-600 border-t">
          <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
          <% @groups.each do |group| %>
            <tr class="hover:bg-gray-100 dark:hover:bg-gray-700 text-sm font-normal text-gray-500 dark:text-gray-400">
              <td class="flex items-center p-4 mr-12 space-x-6 whitespace-nowrap">
                <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                  <%= link_to group.name, group_path(group), class: "link" %>
                  <p><%= group.description %></p>
                </div>
              </td>
              <td class="px-4 py-3">
                <div class="flex justify-end">
                  <div class="inline-flex items-center justify-center mr-2"><%= render "icons/plus", class_names: "w-4 h-4 mr-1" %>
                    0
                  </div>
                  <div class="inline-flex items-center justify-center"><%= render "icons/users", class_names: "w-4 h-4 mr-1" %>
                    1
                  </div>
                  <button data-dropdown-toggle="group-<%= group.id %>-dropdown" class="navbar-btn">
                    <%= render 'icons/ellipsis_vertical' %>
                  </button>
                  <!-- Dropdown menu -->
                  <div id="group-<%= group.id %>-dropdown" class="dropdown-menu">
                    <ul aria-labelledby="dropdownDefaultButton">
                      <li>
                        <%= link_to "Delete", group_path(group.full_path), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this group?" } %>
                      </li>
                    </ul>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>